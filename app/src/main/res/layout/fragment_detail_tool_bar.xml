<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:orientation="vertical" >

    <View
        android:id="@+id/toolbar_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:src="@drawable/btn_opt_tools_to_text_selector" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/flight_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/action_flight"
                style="@style/toolbar_action"
                android:src="@drawable/btn_opt_flight_selector" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/favorite_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/action_favorite"
                style="@style/toolbar_action"
                android:src="@drawable/btn_opt_favorite_selector" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/favor_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/action_favor"
                style="@style/toolbar_action"
                android:src="@drawable/btn_opt_tools_to_text_selector" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/share_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/action_share"
                style="@style/toolbar_action"
                android:src="@drawable/btn_opt_share_selector" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>