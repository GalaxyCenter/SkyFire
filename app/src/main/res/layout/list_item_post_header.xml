<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_userface"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="@dimen/space_20"
        android:text="@string/app_name"/>

    <RelativeLayout
        android:layout_below="@+id/layout_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/views_img"
            android:background="@drawable/ic_eye_red_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/views"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/views_img"
            android:layout_marginStart="4dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chevron"
            android:background="@drawable/ic_chevron_right_red_16dp"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/replies_img"
            android:background="@drawable/ic_comment_red_16dp"
            android:layout_toEndOf="@+id/views"
            android:layout_marginStart="21dp" />

        <TextView
            android:id="@+id/replies"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/replies_img"
            android:layout_toEndOf="@+id/replies_img"
            android:layout_marginStart="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/section"
            android:layout_toStartOf="@+id/chevron" />

    </RelativeLayout>

</LinearLayout>