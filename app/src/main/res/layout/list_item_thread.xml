<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip">

            <RelativeLayout
                android:id="@+id/layout_userface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <apollo.tianya.widget.AvatarView
                    android:id="@+id/userface"
                    style="@style/user_face_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/author"
                    android:textStyle="bold"
                    android:text="@string/app_name"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/userface"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8.0dip"
                    />

                <TextView
                    android:id="@+id/time"
                    android:text="@string/app_name"
                    style="@style/list_text_info"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_userface"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/app_name"/>

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/app_name"/>

            <LinearLayout
                android:id="@+id/layout_photo"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:layout_below="@id/summary"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:layerType="software"
                android:orientation="horizontal" >

            <android.support.v4.view.ViewPager
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clipChildren="false"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/layout_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/views_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/views_img" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/share"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/replies_img"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/share" />

                <TextView
                    android:id="@+id/replies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/replies_img" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>